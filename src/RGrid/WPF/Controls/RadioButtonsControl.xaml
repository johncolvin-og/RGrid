<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ctrl="clr-namespace:RGrid.Controls"
>
  <Style TargetType="{x:Type ctrl:RadioButtonItem}" BasedOn="{StaticResource {x:Type RadioButton}}">
    <Setter Property="Margin" Value="3" />
    <Setter Property="Focusable" Value="False"/>
  </Style>
  <Style TargetType="{x:Type ctrl:RadioButtonsControl}" BasedOn="{StaticResource {x:Type ItemsControl}}">
    <Setter Property="Focusable" Value="False"/>
    <Setter Property="ItemsPanel">
      <Setter.Value>
        <ItemsPanelTemplate>
          <WrapPanel Orientation="{Binding Orientation, RelativeSource={RelativeSource AncestorType=ctrl:RadioButtonsControl}}" />
        </ItemsPanelTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  </ResourceDictionary>